---
layout: base.njk
pagination:
  data: services
  size: 1
  alias: service
permalink: "/uslugi/{{ service.slug }}/"
eleventyComputed:
  title: "{{ service.name }}"
  description: "{{ service.description }}"
---

<!-- Hero Section with Image Carousel -->
<section class="relative pb-18 pt-6 md:pt-10 bg-primary-sand/30">
	<div class="max-w-7xl w-full mx-auto px-4">
		<div class="flex flex-col gap-2 md:gap-4">
			<!-- Title -->
			<h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-primary-evergreen">{{ service.name }}</h1>
			
			<!-- Description -->
			<p class="text-md pb-4 md:max-w-[60%] text-primary-deepsea leading-relaxed">
				{{ service.description }}
			</p>

			<!-- Image Carousel - Full Width -->
			<div class="relative rounded-3xl overflow-hidden shadow-xl w-full">
				<div id="service-hero-carousel" class="relative w-full h-80 md:h-[500px]">
					{% if service.images and service.images.length > 0 %}
						{% for image in service.images %}
							<div class="carousel-slide absolute inset-0 opacity-0 transition-opacity duration-500 ease-in-out {% if loop.first %}opacity-100{% endif %}">
								<img src="{{ image | url }}" alt="{{ service.name }}" class="w-full h-full object-cover">
							</div>
						{% endfor %}
					{% elif service.image %}
						<div class="carousel-slide opacity-100">
							<img src="{{ service.image | url }}" alt="{{ service.name }}" class="w-full h-full object-cover">
						</div>
					{% endif %}
					
					<!-- Bottom Gradient Overlay -->
					<div class="absolute bottom-0 left-0 right-0 h-[20%] bg-gradient-to-t from-black/80 to-transparent pointer-events-none z-[5]"></div>
					
					<!-- Navigation Arrows -->
					{% if service.images and service.images.length > 1 %}
						<button class="carousel-arrow carousel-arrow-prev absolute left-4 top-1/2 transform -translate-y-1/2 z-20 bg-white/80 hover:bg-white backdrop-blur-sm rounded-full p-2 transition-all duration-300 shadow-lg hover:shadow-xl" aria-label="Previous image">
							<svg class="w-6 h-6 text-primary-deepsea" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
							</svg>
						</button>
						<button class="carousel-arrow carousel-arrow-next absolute right-4 top-1/2 transform -translate-y-1/2 z-20 bg-white/80 hover:bg-white backdrop-blur-sm rounded-full p-2 transition-all duration-300 shadow-lg hover:shadow-xl" aria-label="Next image">
							<svg class="w-6 h-6 text-primary-deepsea" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
							</svg>
						</button>
					{% endif %}
				</div>
				
				<!-- Carousel Dots -->
				{% if service.images and service.images.length > 1 %}
					<div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex gap-2 z-10">
						{% for image in service.images %}
							<button class="carousel-dot w-2 h-2 rounded-full bg-white/50 transition-all duration-300 {% if loop.first %}bg-white w-6{% endif %}" data-index="{{ loop.index0 }}" aria-label="Go to slide {{ loop.index }}"></button>
						{% endfor %}
					</div>
				{% endif %}
			</div>
		</div>
	</div>
</section>

<!-- Описание Section -->
{% if service.longDescription %}
<section class="py-12 bg-primary-sand/30">
	<div class="max-w-7xl w-full mx-auto px-4">
		<h2 class="text-2xl md:text-3xl font-bold text-primary-evergreen mb-6">Описание</h2>
		<div class="bg-white/60 rounded-2xl p-6 md:p-8">
			<div class="prose prose-lg max-w-none">
				<p class="text-primary-deepsea leading-relaxed text-base md:text-lg">
					{{ service.longDescription | safe }}
				</p>
				<p class="text-md font-semibold text-primary-evergreen mt-2">Цена: {{ service.price.lv }} лв / {{ service.price.eur }} €</p>
			</div>
		</div>
	</div>
</section>
{% endif %}

<!-- Ползи Section -->
{% if service.benefits and service.benefits.length > 0 %}
<section class="py-12 bg-white">
	<div class="max-w-7xl w-full mx-auto px-4">
		<h2 class="text-2xl md:text-3xl font-bold text-primary-evergreen mb-8">Ползи</h2>
		<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
			{% for benefit in service.benefits %}
				<div class="bg-primary-sand/30 rounded-2xl p-6 flex items-start gap-4">
					<svg class="w-6 h-6 text-primary-evergreen flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
					</svg>
					<p class="text-primary-deepsea text-sm md:text-base">{{ benefit }}</p>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
{% endif %}

<!-- Процес Section -->
{% if service.howItWorks and service.howItWorks.length > 0 %}
<section class="py-12 bg-primary-sand/30">
	<div class="max-w-7xl w-full mx-auto px-4">
		<h2 class="text-2xl md:text-3xl font-bold text-primary-evergreen mb-8">Процес</h2>
		<div class="space-y-6">
			<!-- Time as First Step -->
			{% if service.time %}
				<div class="bg-white rounded-2xl p-6 shadow-md flex items-start gap-4">
					<div class="w-10 h-10 rounded-full bg-primary-sand/80 text-primary-evergreen flex items-center justify-center font-bold flex-shrink-0">1</div>
					<div class="flex-1">
						<div class="flex items-center gap-3 mb-2">
							
							<h3 class="text-primary-deepsea ">Времетраене</h3>
						</div>
						<p class="text-primary-dark-gray">{{ service.time }}</p>
					</div>
				</div>
			{% endif %}
			
			<!-- Other Steps -->
			{% for step in service.howItWorks %}
				<div class="bg-white rounded-2xl p-6 shadow-md flex items-start gap-4">
					<div class="w-10 h-10 rounded-full bg-primary-sand/80 text-primary-evergreen flex items-center justify-center font-bold flex-shrink-0">
						{% if service.time %}
							{{ loop.index + 1 }}
						{% else %}
							{{ loop.index }}
						{% endif %}
					</div>
					<div class="flex-1">
						<p class="text-primary-dark-gray text-base">{{ step.name }}</p>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
{% endif %}

<section class="py-12">
                    <div class="max-w-7xl mx-auto px-4">
                        <div class="relative h-[500px] md:h-[400px] w-full flex flex-col md:flex-row justify-evenly items-center gap-12 p-8 overflow-hidden rounded-3xl">

                            <div class="-z-10 absolute top-0 left-0 w-full h-full flex items-center justify-center">
                            <img src="{{ '/assets/images/cta2.jpg' | url }}" alt="CTA Image" class="w-full h-full object-cover ">
                            </div>

                            <div class="cta-left-side w-full sm-w-[50%] flex flex-col justify-center items-center sm:items-center text-center md:text-left">

                                <h2 class="text-white text-3xl md:text-4xl lg:text-5xl font-semibold">
                                    Време е за теб!
                                </h2>
                                <p class="text-white text-sm font-light">
                                    Подари си момент на внимание и грижа за тялото си.
                                </p>

                            </div>

                            <div class="w-full sm-w-[50%] cta-right-side ">

                                <div class="p-8 home-cta-buttons-ct cta-glassy-container flex flex-col gap-4 sm:flexcol">

                                    <p class="text-primary-volcanic text-sm font-semibold">Запази час или разгледай моите продукти</p>
                                    <div class="flex flex-col sm:flex-row gap-4">

                                        <a href="viber://chat?number=%2B359885415300" class="text-primary-evergreen flex items-center justify-center gap-2 btn-primary w-full text-center rounded-3xl" target="_blank" rel="noopener">
                                            <img src="{{ '/assets/images/booking.png' | url }}" alt="Clock" class="w-6 h-6 object-contain "> Запази час</a>

                                        <a href="{{ '/produkti/' | url }}" class="flex items-center justify-center gap-2 btn-secondary hover:scale-105 transition-all duration-300 w-full text-center rounded-3xl  !hover:text-accent-evergreen">
                                            <img src="{{ '/assets/images/products.png' | url }}" alt="Clock" class=" w-6 h-6 object-contain ">Продукти</a>
                                    </div>

                                </div>

                            </div>

                        </div>
                    </div>
                </section>


<script src="{{ '/assets/js/service-carousel.js' | url }}"></script>

